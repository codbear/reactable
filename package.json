{
  "name": "@codbear/reactable",
  "version": "0.1.0",
  "author": "codbear (https://github.com/codbear)",
  "description": "This project was bootstrapped with [Create React App](https://github.com/facebook/create-react-app).",
  "license": "GPL-3.0",
  "homepage": "https://github.com/monatheoctocat/my_package",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/codbear/reactable.git"
  },
  "bugs": {
    "url": "https://github.com/codbear/reactable/issues"
  },
  "main": "dist/index.js",
  "module": "dist/index.js",
  "files": [ "dist", "README.md" ],
  "dependencies": {
    "prop-types": "^15.7.2",
    "react": "^17.0.2",
    "styled-components": "^5.3.3"
  },
  "devDependencies": {
    "@storybook/addon-actions": "^6.3.12",
    "@storybook/addon-essentials": "^6.3.12",
    "@storybook/addon-links": "^6.3.12",
    "@storybook/node-logger": "^6.3.12",
    "@storybook/preset-create-react-app": "^3.2.0",
    "@storybook/react": "^6.3.12",
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "babel-cli": "^6.26.0",
    "prettier": "^2.4.1",
    "react-dom": "^17.0.2",
    "react-scripts": "4.0.3"
  },
  "resolutions": {
    "babel-loader": "8.1.0",
    "styled-components": "^5"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "rm -rf dist && NODE_ENV=production babel src/lib --out-dir dist --copy-files --ignore __tests__,spec.js,test.js,__snapshots__",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "lint": "yarn prettier:check && eslint --ext js,jsx",
    "storybook:start": "start-storybook -p 6006 -s public",
    "storybook:build": "build-storybook -s public",
    "prettier:check": "prettier --check 'src/**/*.{js,jsx}'",
    "prettier:write": "prettier --write 'src/**/*.{js,jsx}'"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ],
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
